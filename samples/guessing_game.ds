# Classic guessing game

var $value = rand_int(0, 100)
var $numTries = to_int(0)

print("I have picked a number between 0 and 99")
var $lastGuess = -1
while(
	not(equal($lastGuess, $value)),
	[
		print("Take a guess:")
		$lastGuess = to_int(readline())
		$numTries = add($numTries, 1)
		
		if(
			not(equal($lastGuess, $value)),
			[
				if(lt($lastGuess, $value), print("Too low!"), print("Too high!"))
			]
		)
	]
)

print(concat(concat("You got it! It only took you ", $numTries), " tries."))