# Test Script
# This should run without any errors and print some output that tests
# the scripting engine.
print("Test Script")
print("Each test is made up of a header, which is in the form Suite.Number: Expected result")

##############
## 1: Loops ##
##############
print("Suite #1: Loops")

# For loop
print("1.1: An output of 0 to 9")
for(var $i = 0, lt($i, 10), $i = add($i, 1), print($i))

# While loop
print("1.2: An output of 0 to 9")
var $i = 0
while(lt($i, 10), [print($i) $i = add($i, 1)])
undefine("i")

# Do..while loop
print("1.3: An output of 0 to 9")
var $i = 0
do([print($i) $i = add($i, 1)], lt($i,10))
undefine("i")

##############
## 2: Scope ##
##############
print("Suite #2: Scope")

# Break
print("2.1: Nothing")
for(var $i = 0, lt($i, 10), $i = add($i, 1), [break $null print($i)])

# Continue
print("2.1: Odd numbers between 0 and 9 (inclusive)")
for(var $i = 0, lt($i, 10), $i = add($i, 1), [if(equal(0, mod($i, 2)), continue) print($i)])

echo("FINISHED")