# Test Script
# This should run without any errors and print some output that tests
# the scripting engine.
$console.print("Test Script")
$console.print("Each test is made up of a header, which is in the form Suite.Number: Expected result")

##############
## 1: Loops ##
##############
$console.print("Suite #1: Loops")

# For loop
$console.print("1.1: An output of 0 to 9")
for({var $i = 0}, {lt($i, 10)}, {$i = add($i, 1)}, {$console.print($i)})

# While loop
$console.print("1.2: An output of 0 to 9")
var $i = 0
while({lt($i, 10)}, {$console.print($i) $i = add($i, 1)})
undefine("i")

# Do..while loop
$console.print("1.3: An output of 0 to 9")
var $i = 0
do({$console.print($i) $i = add($i, 1)}, {lt($i,10)})
undefine("i")

##############
## 2: Scope ##
##############
$console.print("Suite #2: Scope")

# Break
$console.print("2.1: Nothing")
for({var $i = 0}, {lt($i, 10)}, {$i = add($i, 1)}, {break $null $console.print($i)})

# Continue
$console.print("2.2: Odd numbers between 0 and 9 (inclusive)")
for({var $i = 0}, {lt($i, 10)}, {$i = add($i, 1)}, {if(equal(0, mod($i, 2)), {continue}) $console.print($i)})

echo("FINISHED")